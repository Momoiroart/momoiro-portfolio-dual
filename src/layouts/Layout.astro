---
export interface Props {
  title?: string;
  description?: string;
}
const {
  title = "Momoiro's Workshop — Portfolio",
  description = "Momoiro's Workshop - Digital artist and programmer specializing in Live2D, 3D modeling, Unity development, and Python programming. VTuber models, VRChat worlds, and custom software.",
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title>{title}</title>
<meta name="description" content={description}/>
<meta property="og:title" content="Momoiro's Workshop - Digital Art & Coding Portfolio"/>
<meta property="og:description" content="Computer Graphics · Programming · Game Development"/>
<meta property="og:type" content="website"/>
<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Space+Mono:ital,wght@0,400;0,700;1,400&family=Syne:wght@400;700;800&display=swap" rel="stylesheet"/>
<style is:global>
  :root {
    --void: #05030f;
    --deep: #0d0820;
    --nebula: #1a0e35;
    --iolite: #4b2fa0;
    --violet: #7c4fd0;
    --lavender: #b48fff;
    --cyan-glow: #4af0e8;
    --cyan-dim: #1ec9c2;
    --star-white: #e8e0ff;
    --text-body: #c8b8f0;
    --pink-momo: #ff6b9d;
    --pink-soft: #ff9ec4;
  }

  * { margin:0; padding:0; box-sizing:border-box; }

  html { scroll-behavior: smooth; }

  body {
    background: var(--void);
    color: var(--text-body);
    font-family: 'Space Mono', monospace;
    overflow-x: hidden;
    cursor: none;
  }

  @media (hover: none) {
    body { cursor: auto; }
    #cursor, #cursor-dot { display: none !important; }
  }

  *:focus-visible {
    outline: 2px solid var(--cyan-glow);
    outline-offset: 2px;
  }

  .skip-link {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    background: var(--pink-momo);
    color: #fff;
    text-decoration: none;
    border-radius: 8px;
    z-index: 10000;
    transition: top 0.3s;
  }
  .skip-link:focus { top: 16px; }

  /* ── Custom cursor ── */
  #cursor {
    position: fixed; pointer-events: none; z-index: 9999;
    width: 16px; height: 16px;
    border: 2px solid var(--pink-momo);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width .15s, height .15s, background .15s;
    box-shadow: 0 0 10px var(--pink-momo), 0 0 30px rgba(255,107,157,0.3);
  }
  #cursor-dot {
    position: fixed; pointer-events: none; z-index: 9999;
    width: 4px; height: 4px;
    background: var(--pink-momo);
    border-radius: 50%;
    transform: translate(-50%, -50%);
  }
  body:hover #cursor { width: 24px; height: 24px; }

  /* ── Star canvas ── */
  #starfield {
    position: fixed; inset: 0; z-index: 0;
    pointer-events: none;
  }

  /* ── Floating orbs ── */
  .orb {
    position: fixed; border-radius: 50%; pointer-events: none;
    filter: blur(80px); z-index: 0; opacity: 0.18;
    animation: driftOrb 20s ease-in-out infinite alternate;
  }
  .orb-1 { width: 500px; height: 500px; background: var(--iolite); top: -150px; left: -100px; animation-duration: 18s; }
  .orb-2 { width: 350px; height: 350px; background: var(--cyan-dim); top: 30%; right: -80px; animation-duration: 24s; animation-delay: -8s; }
  .orb-3 { width: 280px; height: 280px; background: var(--pink-momo); bottom: -80px; left: 30%; animation-duration: 20s; animation-delay: -4s; opacity: 0.12; }
  @keyframes driftOrb {
    from { transform: translate(0, 0) scale(1); }
    to   { transform: translate(40px, 30px) scale(1.1); }
  }

  /* ── Floating Model Decoration ── */
  #model-decoration {
    position: fixed;
    right: 5%;
    bottom: 10%;
    width: 280px;
    height: 400px;
    z-index: 100;
    pointer-events: none;
    opacity: 0.85;
    animation: floatModel 6s ease-in-out infinite;
  }
  #model-decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 0 30px rgba(255,107,157,0.3));
  }
  @keyframes floatModel {
    0%, 100% { transform: translateY(0px) rotate(2deg); }
    50% { transform: translateY(-20px) rotate(-2deg); }
  }

  /* ── Main layout ── */
  .page { position: relative; z-index: 1; }

  /* ── HERO ── */
  #hero {
    min-height: 100vh;
    display: flex; flex-direction: column;
    align-items: center; justify-content: center;
    text-align: center;
    padding: 60px 24px;
    position: relative;
  }

  .hero-orb {
    width: 80px; height: 80px;
    background: radial-gradient(circle at 38% 38%, #fff 0%, var(--pink-momo) 30%, var(--violet) 70%, transparent 100%);
    border-radius: 50%;
    box-shadow: 0 0 40px var(--pink-momo), 0 0 100px rgba(255,107,157,0.4), 0 0 200px rgba(124,79,208,0.3);
    animation: pulseOrb 4s ease-in-out infinite;
    margin-bottom: 200px;
  }
  @keyframes pulseOrb {
    0%,100% { box-shadow: 0 0 40px var(--pink-momo), 0 0 100px rgba(255,107,157,0.4), 0 0 200px rgba(124,79,208,0.3); }
    50% { box-shadow: 0 0 60px var(--pink-momo), 0 0 150px rgba(255,107,157,0.6), 0 0 280px rgba(124,79,208,0.5); }
  }

  .hero-label {
    font-family: 'Orbitron', sans-serif;
    font-size: clamp(10px, 2vw, 13px);
    letter-spacing: 0.4em;
    color: var(--pink-momo);
    text-transform: uppercase;
    margin-bottom: 16px;
    opacity: 0;
    animation: fadeUp 1s ease forwards 0.3s;
  }
  .hero-title {
    font-family: 'Orbitron', sans-serif;
    font-size: clamp(32px, 8vw, 90px);
    font-weight: 900;
    line-height: 0.9;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #ffffff 0%, var(--pink-soft) 40%, var(--lavender) 100%);
    -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0;
    animation: fadeUp 1s ease forwards 0.6s;
    position: relative; z-index: 2;
  }
  .hero-sub {
    font-family: 'Space Mono', monospace;
    font-size: clamp(11px, 1.5vw, 14px);
    color: var(--lavender);
    letter-spacing: 0.1em;
    margin-top: 20px;
    opacity: 0;
    animation: fadeUp 1s ease forwards 0.9s;
  }
  .hero-tags {
    display: flex; gap: 12px; flex-wrap: wrap; justify-content: center;
    margin-top: 28px;
    opacity: 0;
    animation: fadeUp 1s ease forwards 1.2s;
  }
  .tag {
    padding: 6px 16px;
    border: 1px solid rgba(255,107,157,0.4);
    border-radius: 100px;
    font-size: 11px;
    letter-spacing: 0.15em;
    color: var(--pink-soft);
    background: rgba(255,107,157,0.06);
    text-transform: uppercase;
    transition: all 0.2s;
  }
  .tag:hover {
    background: rgba(255,107,157,0.15);
    border-color: var(--pink-momo);
    box-shadow: 0 0 16px rgba(255,107,157,0.3);
  }

  .scroll-hint {
    position: absolute; bottom: 32px;
    display: flex; flex-direction: column; align-items: center; gap: 8px;
    opacity: 0; animation: fadeUp 1s ease forwards 1.8s;
  }
  .scroll-hint span { font-size: 10px; letter-spacing: 0.2em; color: var(--iolite); text-transform: uppercase; }
  .scroll-line {
    width: 1px; height: 50px;
    background: linear-gradient(to bottom, var(--pink-momo), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }
  @keyframes scrollPulse { 0%,100%{opacity:0.3;} 50%{opacity:1;} }

  @keyframes fadeUp {
    from { opacity:0; transform: translateY(20px); }
    to   { opacity:1; transform: translateY(0); }
  }

  /* ── Sections ── */
  .section {
    max-width: 900px;
    margin: 0 auto;
    padding: 80px 24px;
  }

  .section-label {
    font-family: 'Orbitron', sans-serif;
    font-size: 10px;
    letter-spacing: 0.4em;
    color: var(--pink-momo);
    text-transform: uppercase;
    margin-bottom: 12px;
    display: flex; align-items: center; gap: 16px;
  }
  .section-label::after {
    content: '';
    flex: 1;
    height: 1px;
    background: linear-gradient(to right, rgba(255,107,157,0.4), transparent);
  }

  .section-title {
    font-family: 'Syne', sans-serif;
    font-size: clamp(28px, 5vw, 52px);
    font-weight: 800;
    color: #fff;
    line-height: 1.1;
    margin-bottom: 24px;
  }
  .section-title em {
    font-style: normal;
    background: linear-gradient(90deg, var(--pink-soft), var(--cyan-glow));
    -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* ── Skills grid ── */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-top: 32px;
  }
  .skill-card {
    background: rgba(26,14,53,0.6);
    border: 1px solid rgba(255,107,157,0.2);
    border-radius: 16px;
    padding: 28px 20px;
    text-align: center;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  .skill-card:hover {
    transform: translateY(-6px) scale(1.02);
    border-color: rgba(255,107,157,0.5);
    box-shadow: 0 20px 60px rgba(255,107,157,0.15);
  }
  .skill-card.active {
    border-color: var(--pink-momo);
    box-shadow: 0 0 30px rgba(255,107,157,0.3);
  }
  .skill-icon {
    font-size: 36px;
    margin-bottom: 12px;
    display: block;
  }
  .skill-card h3 {
    font-family: 'Syne', sans-serif;
    font-size: 14px;
    font-weight: 700;
    color: var(--pink-soft);
    letter-spacing: 0.05em;
    margin-bottom: 8px;
  }
  .skill-card p {
    font-size: 11.5px;
    color: var(--text-body);
    line-height: 1.6;
    opacity: 0.8;
  }

  /* ── Popup Modal ── */
  .popup-overlay {
    position: fixed;
    inset: 0;
    background: rgba(5,3,15,0.95);
    z-index: 1000;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 20px;
    overflow-y: auto;
  }
  .popup-overlay.active {
    display: flex;
  }

  .popup-content {
    background: linear-gradient(135deg, rgba(75,47,160,0.3) 0%, rgba(13,8,32,0.9) 100%);
    border: 1px solid rgba(255,107,157,0.3);
    border-radius: 24px;
    padding: 40px;
    max-width: 800px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    animation: popIn 0.3s ease;
  }
  @keyframes popIn {
    from { transform: scale(0.9); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
  }

  .popup-close {
    position: absolute;
    top: 16px;
    right: 16px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid rgba(255,107,157,0.4);
    background: rgba(255,107,157,0.1);
    color: var(--pink-soft);
    font-size: 20px;
    cursor: pointer;
    transition: all 0.2s;
  }
  .popup-close:hover {
    background: rgba(255,107,157,0.3);
    transform: rotate(90deg);
  }

  .popup-title {
    font-family: 'Syne', sans-serif;
    font-size: 28px;
    font-weight: 800;
    color: #fff;
    margin-bottom: 8px;
  }
  .popup-category {
    display: inline-block;
    padding: 4px 12px;
    background: rgba(255,107,157,0.2);
    border: 1px solid rgba(255,107,157,0.4);
    border-radius: 100px;
    font-size: 10px;
    color: var(--pink-soft);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin-bottom: 20px;
  }
  .popup-description {
    font-size: 14px;
    color: var(--text-body);
    line-height: 1.8;
    margin-bottom: 24px;
  }

  .popup-media {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 24px;
  }
  .popup-media img, .popup-media video {
    width: 100%;
    height: 200px;
    object-fit: contain;
    border-radius: 12px;
    border: 1px solid rgba(255,107,157,0.2);
    background: rgba(0,0,0,0.3);
  }

  .popup-projects-title {
    font-family: 'Syne', sans-serif;
    font-size: 16px;
    font-weight: 700;
    color: var(--cyan-glow);
    margin-bottom: 12px;
  }

  .popup-project-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .popup-project-item {
    background: rgba(26,14,53,0.6);
    border: 1px solid rgba(124,79,208,0.2);
    border-radius: 12px;
    padding: 16px;
    transition: all 0.2s;
  }
  .popup-project-item:hover {
    border-color: rgba(74,240,232,0.4);
  }
  .popup-project-item h4 {
    font-family: 'Syne', sans-serif;
    font-size: 14px;
    color: #fff;
    margin-bottom: 4px;
  }
  .popup-project-item p {
    font-size: 12px;
    color: var(--text-body);
    opacity: 0.8;
  }

  /* ── Showcase Section ── */
  .showcase-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
    margin-top: 32px;
  }
  .showcase-card {
    background: rgba(26,14,53,0.6);
    border: 1px solid rgba(255,107,157,0.2);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  .showcase-card:hover {
    border-color: rgba(255,107,157,0.5);
    transform: translateY(-6px);
  }
  .showcase-media {
    width: 100%;
    height: 250px;
    object-fit: contain;
    background: rgba(0,0,0,0.3);
  }
  .showcase-info {
    padding: 20px;
  }
  .showcase-title {
    font-family: 'Syne', sans-serif;
    font-size: 16px;
    font-weight: 700;
    color: #fff;
    margin-bottom: 8px;
  }
  .showcase-desc {
    font-size: 12px;
    color: var(--text-body);
    opacity: 0.8;
  }

  /* ── Sketchfab Section ── */
  .sketchfab-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 24px;
    margin-top: 32px;
  }
  .sketchfab-card {
    background: rgba(26,14,53,0.6);
    border: 1px solid rgba(255,107,157,0.2);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  .sketchfab-card:hover {
    border-color: rgba(255,107,157,0.5);
    transform: translateY(-6px);
  }
  .sketchfab-card iframe {
    width: 100%;
    height: 300px;
    border: none;
  }
  .sketchfab-info {
    padding: 16px;
    text-align: center;
  }
  .sketchfab-info h3 {
    font-family: 'Syne', sans-serif;
    font-size: 14px;
    color: #fff;
    margin: 0;
  }

  /* ── Programming Skills ── */
  .prog-skills {
    display: flex; flex-wrap: wrap; gap: 10px;
    margin-top: 28px;
  }
  .prog-skill {
    padding: 10px 20px;
    border-radius: 100px;
    font-size: 12px;
    letter-spacing: 0.08em;
    font-family: 'Space Mono', monospace;
    position: relative; overflow: hidden;
    transition: all 0.25s;
    cursor: default;
  }
  .prog-skill.cyan {
    background: rgba(74,240,232,0.08);
    border: 1px solid rgba(74,240,232,0.35);
    color: var(--cyan-glow);
  }
  .prog-skill.violet {
    background: rgba(180,143,255,0.08);
    border: 1px solid rgba(180,143,255,0.35);
    color: var(--lavender);
  }
  .prog-skill.pink {
    background: rgba(255,107,157,0.08);
    border: 1px solid rgba(255,107,157,0.35);
    color: var(--pink-soft);
  }
  .prog-skill:hover {
    transform: scale(1.06);
    box-shadow: 0 0 20px rgba(255,107,157,0.2);
  }

  /* ── Project List ── */
  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 16px;
    margin-top: 32px;
  }

  .project-card {
    background: linear-gradient(135deg, rgba(75,47,160,0.15) 0%, rgba(13,8,32,0.6) 100%);
    border: 1px solid rgba(180,143,255,0.2);
    border-radius: 16px;
    padding: 24px;
    transition: all 0.3s ease;
  }
  .project-card:hover {
    transform: translateY(-6px);
    border-color: rgba(255,107,157,0.4);
    box-shadow: 0 15px 40px rgba(255,107,157,0.1);
  }

  .project-number {
    font-family: 'Orbitron', sans-serif;
    font-size: 10px;
    color: var(--pink-momo);
    letter-spacing: 0.2em;
    margin-bottom: 8px;
  }

  .project-title {
    font-family: 'Syne', sans-serif;
    font-size: 18px;
    font-weight: 700;
    color: #fff;
    margin-bottom: 8px;
  }

  .project-category {
    display: inline-block;
    padding: 3px 10px;
    background: rgba(255,107,157,0.15);
    border: 1px solid rgba(255,107,157,0.3);
    border-radius: 100px;
    font-size: 9px;
    letter-spacing: 0.15em;
    color: var(--pink-soft);
    text-transform: uppercase;
    margin-bottom: 12px;
  }

  .project-description {
    font-size: 13px;
    color: var(--text-body);
    line-height: 1.6;
    margin-bottom: 12px;
  }

  .project-tags {
    display: flex; flex-wrap: wrap; gap: 6px;
  }
  .project-tag {
    padding: 4px 10px;
    border-radius: 100px;
    font-size: 9px;
    letter-spacing: 0.1em;
    background: rgba(74,240,232,0.1);
    border: 1px solid rgba(74,240,232,0.3);
    color: var(--cyan-glow);
  }

  /* ── Contact Section ── */
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 16px;
    margin-top: 32px;
  }
  .contact-card {
    background: rgba(26,14,53,0.6);
    border: 1px solid rgba(255,107,157,0.2);
    border-radius: 16px;
    padding: 24px 16px;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }
  .contact-card:hover {
    transform: translateY(-6px);
    border-color: rgba(255,107,157,0.5);
    box-shadow: 0 15px 40px rgba(255,107,157,0.15);
  }
  .contact-icon { font-size: 32px; }
  .contact-name {
    font-family: 'Syne', sans-serif;
    font-size: 14px;
    font-weight: 700;
    color: #fff;
  }
  .contact-username {
    font-size: 11px;
    color: var(--text-body);
    opacity: 0.8;
  }

  /* ── Divider ── */
  .section-divider {
    width: 100%; height: 1px;
    background: linear-gradient(90deg, transparent, rgba(124,79,208,0.4), transparent);
    margin: 0;
  }

  /* ── Footer ── */
  footer {
    text-align: center;
    padding: 60px 24px;
    border-top: 1px solid rgba(124,79,208,0.2);
    position: relative; z-index: 1;
  }
  .footer-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 11px;
    letter-spacing: 0.3em;
    color: var(--pink-momo);
    text-transform: uppercase;
    margin-bottom: 8px;
  }
  .footer-copy {
    font-size: 12px;
    color: rgba(180,143,255,0.4);
  }

  /* ── Reveal on scroll ── */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.7s ease, transform 0.7s ease;
  }
  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .reveal-children > * {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }
  .reveal-children.visible > *:nth-child(1) { transition-delay: 0.1s; }
  .reveal-children.visible > *:nth-child(2) { transition-delay: 0.2s; }
  .reveal-children.visible > *:nth-child(3) { transition-delay: 0.3s; }
  .reveal-children.visible > *:nth-child(4) { transition-delay: 0.4s; }
  .reveal-children.visible > *:nth-child(5) { transition-delay: 0.5s; }
  .reveal-children.visible > *:nth-child(6) { transition-delay: 0.6s; }
  .reveal-children.visible > *:nth-child(7) { transition-delay: 0.7s; }
  .reveal-children.visible > *:nth-child(8) { transition-delay: 0.8s; }
  .reveal-children.visible > * {
    opacity: 1;
    transform: translateY(0);
  }

  /* ── Loading screen ── */
  #loader {
    position: fixed; inset: 0;
    background: var(--void);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    transition: opacity 0.5s ease, visibility 0.5s ease;
  }
  #loader.hidden {
    opacity: 0;
    visibility: hidden !important;
    pointer-events: none !important;
  }
  .loader-orb {
    width: 60px; height: 60px;
    background: radial-gradient(circle, #fff 0%, var(--pink-momo) 50%, var(--violet) 100%);
    border-radius: 50%;
    animation: pulseLoad 1.5s ease-in-out infinite;
  }
  @keyframes pulseLoad {
