---
interface Testimonial { emoji: string; author: string; role: string; quote: string; bgColor: string; }
interface Props { testimonials: Testimonial[]; }
const { testimonials } = Astro.props;
---

<!-- ══════════════════ TESTIMONIALS ══════════════════ -->
<section class="section reveal" id="testimonials">
  <p class="section-label">Testimonials</p>
  <h2 class="section-title">Client <em>feedback</em></h2>

  <div class="testimonial-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px; margin-top: 32px;">
    {testimonials.map(t => (
      <div class="testimonial-card" style="background: rgba(26,14,53,0.6); border: 1px solid rgba(255,107,157,0.2); border-radius: 16px; padding: 28px;">
        <p style="font-size: 14px; line-height: 1.7; color: var(--text-body); font-style: italic; margin-bottom: 20px;">"{t.quote}"</p>
        <div style="display: flex; align-items: center; gap: 12px;">
          <div style={`width: 40px; height: 40px; border-radius: 50%; background: ${t.bgColor}; display: flex; align-items: center; justify-content: center; font-size: 18px;`}>{t.emoji}</div>
          <div>
            <p style="color: #fff; font-weight: bold; font-size: 13px; margin: 0;">{t.author}</p>
            <p style="color: var(--lavender); font-size: 11px; margin: 0;">{t.role}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
